source 'https://github.com/CocoaPods/Specs.git'
use_frameworks!

target 'QuickTableView_Example' do
  pod 'QuickTableView', :path => '../'

  target 'QuickTableView_Tests' do
    inherit! :search_paths

    pod 'Quick', :git => "https://github.com/Quick/Quick.git", :branch => "swift-3.0"
    pod 'Nimble', :git => "https://github.com/Quick/Nimble.git", :commit => "fcc28b2"
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      config.build_settings['SWIFT_VERSION'] = '3.0'
    end
  end
end
